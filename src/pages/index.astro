---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
// import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import PostCard from '../components/PostCard.astro';
import colors from '../lib/colors';

const coll = await getCollection('blog');
const posts = coll.sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
).map((post, i) => {
  post.data.color = colors[(coll.length - i - 1) % colors.length];
  return post;
});
---

<!doctype html>
<html lang="en">
<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
<div class="min-h-screen flex flex-col">

    <header class="bg-cyan-100 border-b-4 border-black">
      <div class="text-center py-16 sm:py-20 flex flex-col gap-y-4 items-center">
        <h1 class="text-4xl sm:text-7xl sm:tracking-tight font-bold">
          Purdue Hackers Blog
        </h1>
        <h2 class="text-xl text-zinc-600 font-normal">
          Where we share our magic with the world ✨💛⚡️
        </h2>
      </div>
    </header>
    <div class="max-w-sm sm:max-w-6xl grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 py-8 sm:py-14 px-5 sm:px-20 mx-auto">
      {posts.map((post) => (
        <PostCard post={post}/>
      ))}
    </div>
    <Footer />
  </div>
  </body>
</html>
