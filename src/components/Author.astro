---
import { parseMarkdownLink } from 'lib/utils';

interface Props {
  authorString: string;
}

const { authorString } = Astro.props;
const { avatarUrl, author } = parseMarkdownLink(authorString);
---

<span class="flex flex-row gap-x-2 items-center text-lg">
  <img
    src={avatarUrl}
    width={32}
    height={32}
    alt={`Avatar for ${author}`}
    class="rounded-full"
  />
  {author}
</span>
