---
interface Props {
  date: Date;
  monthFormat?: "long" | "short";
  size?: "sm" | "base";
}

const { date, monthFormat = "long", size } = Astro.props;
---

<time datetime={date.toISOString()} class={`text-${size} px-2`}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: monthFormat,
      day: "numeric",
      timeZone: "UTC",
    })
  }
</time>
