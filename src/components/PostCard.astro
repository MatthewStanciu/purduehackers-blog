---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "./FormattedDate.astro";
import colors from "../lib/colors";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { data } = post;
const { color = colors[0] } = data;
---

<a
  href={`posts/${post.slug}`}
  class={`flex py-4 px-3 gap-2 flex-col h-full justify-center rounded-lg border-[3px] border-black bg-${color!.bg} hover:bg-[${color!.mainLight}] transition duration-100 no-underline text-black hover:text-black`}
>
  <div class="rounded-md mx-auto bg-white border-2 border-black px-2 text-sm">
    <FormattedDate date={data.pubDate} , monthFormat="short" />
  </div>
  <h2 class="text-center text-3xl sm:text-2xl md:text-3xl font-bold">
    {data.title}
  </h2>
</a>
